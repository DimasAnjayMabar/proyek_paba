<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HomeFragment">

    <View
        android:id="@+id/vHeaderBackground"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:background="@drawable/bg_header_curved"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/vHeaderAccent"
        android:layout_width="0dp"
        android:layout_height="6dp"
        android:layout_marginHorizontal="24dp"
        android:background="@drawable/bg_header_accent_line"
        app:layout_constraintTop_toBottomOf="@id/vHeaderBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

<!--    <ImageView-->
<!--        android:id="@+id/ivProfile"-->
<!--        android:layout_width="40dp"-->
<!--        android:layout_height="40dp"-->
<!--        android:layout_marginTop="24dp"-->
<!--        android:layout_marginEnd="24dp"-->
<!--        android:background="@drawable/profile"-->
<!--        android:padding="8dp"-->
<!--        android:src="@drawable/menu_profile"-->
<!--        android:scaleType="centerInside"-->
<!--        app:layout_constraintTop_toTopOf="@id/vHeaderBackground"-->
<!--        app:layout_constraintEnd_toEndOf="parent" />-->

    <TextView
        android:id="@+id/tvGreeting"
        style="@style/TextAppearance.MaterialComponents.Headline5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="4dp"
        android:text="Aplikasi Pengelola Gudang"
        android:textColor="?attr/colorOnPrimary"
        app:layout_constraintTop_toTopOf="@id/vHeaderBackground"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvGreetingSubtitle"
        style="@style/TextAppearance.MaterialComponents.Body1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:alpha="0.9"
        android:text="Silakan pilih menu di bawah ini."
        android:textColor="?attr/colorOnPrimary"
        app:layout_constraintTop_toBottomOf="@id/tvGreeting"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/vHeaderBackground" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingTop="8dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/vHeaderBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Baris 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <include
                    android:id="@+id/menuInventory"
                    layout="@layout/item_main_menu" />
                <include
                    android:id="@+id/menuCashier"
                    layout="@layout/item_main_menu" />
            </LinearLayout>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>