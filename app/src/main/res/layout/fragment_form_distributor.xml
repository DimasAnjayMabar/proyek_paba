<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".fragments.FragmentFormDistributor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="24dp">

        <!-- Nama Distributor -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Distributor"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/et_nama_distributor_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan nama produk"
            android:inputType="textCapWords"
            android:maxLines="1"/>

        <!-- Email Distributor -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email Distributor"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <EditText
            android:id="@+id/et_email_distributor_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukkan email distributor"
            android:inputType="textCapWords"
            android:maxLines="1"/>

        <!-- Tombol Batal dan Update -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="32dp"
            android:weightSum="2">

            <Button
                android:id="@+id/btn_cancel_distributor_new"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Batal"
                android:backgroundTint="@android:color/holo_red_dark"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btn_add_distributor_new"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Add"
                android:backgroundTint="@android:color/holo_green_dark"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>